<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="person1"
            type="com.bovink.databindingsample.model.Person" />

        <variable
            name="person2"
            type="com.bovink.databindingsample.model.Person" />

        <variable
            name="reference"
            type="com.bovink.databindingsample.databinding.layoutbinding.EventHandlerActivity.MethodReference" />

        <variable
            name="binding"
            type="com.bovink.databindingsample.databinding.layoutbinding.EventHandlerActivity.ListenerBinding" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{person1.name}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{reference::methodDoSomething}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{person2.name}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view) -> binding.listenerDoSomething()}" />
    </LinearLayout>
</layout>
